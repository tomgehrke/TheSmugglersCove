<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/InventoryItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo_imageview"
        style="@style/InventoryItemPhotoStyle"
        android:contentDescription="@string/photo_image_description"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_textview"
            style="@style/InventoryItemName"
            tools:text="Name"/>

        <TextView
            android:id="@+id/price_textview"
            style="@style/InventoryItemSubText"
            tools:text="1.99"/>

        <TextView
            android:id="@+id/quantity_textview"
            style="@style/InventoryItemSubText"
            tools:text="99"/>

    </LinearLayout>

    <Button
        android:id="@+id/sell_button"
        style="@style/InventoryItemSellButton"
        android:focusable="false"
        android:text="@string/label_sell_button"/>

</LinearLayout>